{% extends 'base.html.twig' %}

{% block title %}ForumLearning - Liste des topics{% endblock %}

{% block body %}
{% include 'main/header.html.twig' %}

<div class="container body-gray">

</div>
    <h1>Topics index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Cr√©ateur</th>
                <th>Date</th>
                <th>like</th>
                <th>dislike</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topicsRecent %}
            <tr>
                <td>{{ topic.id }}</td>
                <td>{{ topic.title }}</td>
                <td>{{ topic.text }}</td>
                <td>{{ topic.users.pseudo }}</td>
                <td>{{ topic.date ? topic.date|date('H:i d-m-Y') : '' }}</td>

                <td><a href="{{topic.id}}/like" class="likes">
                    <span>{{topic.likes | length}}</span>
                    <span>likes</span> 
                    {% if topic.likeBy(app.user)%}
                    <span>oui</span>
                    {% else %}
                    <span>non</span>
                    {% endif %}
                </a></td>
                <td><a href="{{topic.id}}/dislike" class="dislikes">
                    <span>{{topic.dislikes | length}}</span>
                    <span>dislikes</span>
                    {% if topic.dislikeBy(app.user)%}
                    <span>oui</span>
                    {% else %}
                    <span>non</span>
                    {% endif %}
                </a></td>
                <td>
                    <a href="{{ path('topics_show', {'id': topic.id}) }}">show</a>
                    <a href="{{ path('topics_edit', {'id': topic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('topics_new') }}">Create new</a>
{% endblock %}
